#!/usr/bin/env node
const zinc = require('../server.zinc'),
  debug = require('debug')('zinc-cms:server'),
  http = require('http'),
  mongoose = require('mongoose');

const config = require('../controllers/config.zinc'),
  log = require('../controllers/logger.zinc')

var server = http.createServer(zinc)

// Mongoose Connetion Goes Here
mongoose.connect(config.db_altUrl, { useMongoClient: true })
  .on('open', (err) => {
    //replace for logger function
    var note = 'MongoDB Has connected and is listening on ' + config.db_host + ':' + config.db_port
    log.zincLogger(note)
  })
  .on('error', (err) => { process.exit(1) })
  .on('disconnected', (err) => { process.exit(0) })

// Listen on provided port, on all network interfaces.
server.listen(config.sv_port, config.sv_host)
  .on('error', log.onError)
  .on('listening', () => {
    var addr = server.address();
    var bind = typeof addr === 'string'
      ? 'pipe ' + addr
      : 'port ' + addr.port;
    debug('Listening on ' + bind);
    // logger.zinc function
    var note = 'Zinc is now Listening to ' + config.sv_host + ':' + config.sv_port
    log.zincLogger(note)
  });

